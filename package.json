{
  "name": "placebo",
  "version": "0.0.0",
  "description": "Placebo, the beautiful diagnostics printer",
  "main": "src/index.js",
  "scripts": {
    "build": "esbuild ./src/index.js --bundle --outdir=dist --platform=node --minify",
    "format": "prettier --write .",
    "test": "NO_COLOR=1 PLACEBO_PRINT_WIDTH=100 jest",
    "examples:generate-readme": "NO_COLOR=1 PLACEBO_PRINT_WIDTH=100 node ./scripts/generate-example-readmes.js",
    "preexamples:generate-readme": "npm run build",
    "postinstall": "npm install --prefix examples"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "keywords": [
    "diagnostics"
  ],
  "author": "Robin Malfait",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.2.241",
    "@swc/jest": "^0.2.22",
    "esbuild": "^0.15.5",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/jest": "^28.1.7",
    "cli-highlight": "^2.1.11",
    "picocolors": "^1.0.0"
  }
}
