{
  "name": "@robinmalfait/placebo",
  "version": "0.2.0-alpha.4",
  "description": "Placebo, the beautiful diagnostics printer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/RobinMalfait/placebo"
  },
  "exports": {
    ".": {
      "style": "./src/index.css",
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "exports": {
      ".": {
        "style": "./dist/index.css",
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "scripts": {
    "build": "tsup ./src/index.ts --format esm --dts --clean",
    "postbuild": "cp ./src/index.css ./dist/index.css",
    "dev": "tsup ./src/index.ts --format esm --dts --clean --watch --sourcemap",
    "prepublishOnly": "pnpm run build",
    "test": "vitest"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "diagnostics"
  ],
  "author": "Robin Malfait",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "dedent": "^1.7.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
